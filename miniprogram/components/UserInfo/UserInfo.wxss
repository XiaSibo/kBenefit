.container {
  width: 100%;
  height: fit-content;
  border: 1px solid red;
}

.container .pic {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx auto;
  border: 1px solid red;
}

.container .pic image {
  width: 100%;
  height: 100%;
  border-radius: 50% 50%;
}

.container .info {
  display: flex;
  justify-content: space-evenly;
  width: 250rpx;
  height: 32rpx;
  margin: 20rpx auto;
  font-size: 30rpx;
  border: 1px solid red;
}

.tags {
  margin: 0 auto;
  width: 300rpx;
  height: fit-content;
  border: 1px solid red;
}
.tag {
  display: inline;
  margin-inline-end: 30rpx;
  border: 1px solid blue;
}