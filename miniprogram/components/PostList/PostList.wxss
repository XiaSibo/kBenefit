.container {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  height: fit-content;
}

.post {
  width: 100%;
  margin-top: 15rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
  background-color: rgba(255, 255, 255, 0.9);
}

.box {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin-bottom: 20rpx;
}

.box .fromBox {
  display: flex;
  justify-content: space-between;
  height: fit-content;
}

.box .toBox {
  display: flex;
  justify-content: space-between;
  height: fit-content;
  margin-left: 100rpx;
}

.ava {
  width: 120rpx;
  height: 120rpx;
}

.ava image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  margin: 0 auto;
  width: 120rpx;
  height: fit-content;
}
.tag {
  border-radius: 30rpx;
  color: white;
  font-size: 20rpx;
  padding: 3rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
  max-width: 120rpx;
  padding: 5rpx 3rpx;
}

.date {
  font-size: 20rpx;
  color: gray;
  margin-left: 10rpx;
}

.box .from {
  width: 80rpx;
  height: fit-content;
  font-size: 20rpx;
  text-align: center;
  background-color: #F4606C;
  border-radius: 15rpx;
  color: white;
}

.box .to {
  width: 50rpx;
  text-align: center;
  height: fit-content;
  font-size: 20rpx;
  background-color: #BEEDC7;
  color: white;
  border-radius: 10rpx;
}

.bottom {
  width: 100%;
  margin-left: 10rpx;
  margin-right: 10rpx;
  margin-bottom: 20rpx;
}

.title {
  width: 600rpx;
  height: fit-content;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text {
  display: flex;
  justify-content: space-between;
  position: relative;
  color: gray;
  font-size: 20rpx;
  width: 100%;
  height: fit-content;
  margin-top: 20rpx;
}

.txt {
  width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.comment {
  position: absolute;
  display: flex;
  justify-content: left;
  font-size: 25rpx;
  width: 20%;
  height: fit-content;
  right: 0rpx;
  bottom: -16rpx;
}

.comment .pic {
  width: 30%;
  padding-bottom: 0rpx;
}

.comment .cnt {
  width: 70%;
}

.pic image {
  width: 37rpx;
  height: 37rpx;
  margin-bottom: 0rpx;
}