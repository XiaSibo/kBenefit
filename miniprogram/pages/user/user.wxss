.container {
  position: relative;
  width: 100%;
  height: fit-content;
  border: 1px solid red;
}
.comment {
  position: fixed;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  right: 18rpx;
  bottom: 18rpx;
  padding-left: 9rpx;
  padding-top: 11rpx;
  background-color: #0d0;
  opacity: 0.4;
}

.goTop {
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  left: 15rpx;
  bottom: 15rpx;
}
.goTop image {
  width: 100rpx;
  height: 100rpx;
  opacity: 0.3;
}
.goTop image:hover {
  opacity: 0.7;
}

.pic {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
  opacity: 0.5;
}