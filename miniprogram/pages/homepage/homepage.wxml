<view class="container">

  <view class="info-box">
    <view style="text-align: center;">
      <van-image width="100" height="100" src="https://img.yzcdn.cn/vant/cat.jpeg" />
    </view>
    <view style="text-align: center;margin-bottom:10%;">
      <van-button size="small" type="primary" bind:click="change_avatar">更换头像</van-button>
    </view>


    <text>学工号： {{user_id}}</text>
    <text>姓名： {{user_name}}</text>
    <text>性别： {{user_sex}}</text>
    <text>标签： {{user_tags}}</text>
    <text>简介： {{user_info}}</text>

    <view style="text-align: center;">
      <van-button size="small" type="primary" bind:click="change_info">编辑简介</van-button>
    </view>
  </view>
</view>